#define kokkoro_dcb_msg     true
#endif

#ifndef kokkoro_dcb_bufsz
#define kokkoro_dcb_bufsz   300
#endif

#ifndef kokkoro_dcb_thdsz
#define kokkoro_dcb_thdsz   4
#endif

#include "../CSV/csv"
#include "../../COM/dcb.h"
#include "kokkoro_data.hpp"

#endif